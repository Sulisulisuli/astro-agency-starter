---
export const prerender = false;
import AdminLayout from '../../layouts/AdminLayout.astro';
import { db, Leads, desc } from 'astro:db';

const leads = await db.select().from(Leads).orderBy(desc(Leads.createdAt));
---

<AdminLayout title="Leads Manager">
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payload Summary</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {leads.map((lead) => (
            <>
                <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#{lead.id}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    {lead.type}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{new Date(lead.createdAt).toLocaleString()}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 truncate max-w-xs">
                    {(lead.payload as any)?.email || 'No email'} - {(lead.payload as any)?.message?.substring(0, 20)}...
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium">
                    <button class="text-indigo-600 hover:text-indigo-900 toggle-json cursor-pointer" data-id={lead.id}>
                        Toggle Details
                    </button>
                </td>
                </tr>
                <tr id={`details-${lead.id}`} class="hidden bg-slate-50">
                    <td colspan="5" class="px-6 py-4">
                        <div class="bg-slate-800 rounded p-4 text-left">
                            <pre class="text-xs text-green-400 font-mono overflow-auto">{JSON.stringify(lead.payload, null, 2)}</pre>
                        </div>
                    </td>
                </tr>
            </>
          ))}
          {leads.length === 0 && (
            <tr>
                <td colspan="5" class="px-6 py-10 text-center text-gray-500">No leads found yet.</td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>

  <script>
    document.querySelectorAll('.toggle-json').forEach(btn => {
        btn.addEventListener('click', (e) => {
            const target = e.target as HTMLElement;
            const id = target.dataset.id;
            const row = document.getElementById(`details-${id}`);
            if (row) {
                row.classList.toggle('hidden');
                target.textContent = row.classList.contains('hidden') ? 'Toggle Details' : 'Close Details';
            }
        });
    });
  </script>
</AdminLayout>
