---
export const prerender = false;
import AdminLayout from "../../layouts/AdminLayout.astro";
import { actions } from "astro:actions";
import { listFiles } from "../../utils/media";

// Helper to get environment variables.
// In Cloudflare Pages + platformProxy, they are in Astro.locals.runtime.env
const appEnv = Astro.locals.runtime?.env || import.meta.env;

// Handle Redirects First
const uploadResult = Astro.getActionResult(actions.media.upload);
if (uploadResult && !uploadResult.error) {
    return Astro.redirect("/admin/media?success=uploaded");
}

const removeResult = Astro.getActionResult(actions.media.remove);
if (removeResult && !removeResult.error) {
    return Astro.redirect("/admin/media?success=deleted");
}

const { files, error: listError, publicUrl } = await listFiles(appEnv);
let errorMsg = listError;

// Check URL params for success messages
const successType = Astro.url.searchParams.get("success");
---

<AdminLayout title="Media Library">
    {
        successType === "uploaded" && (
            <div
                class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"
                role="alert"
            >
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline">
                    {" "}
                    Files uploaded successfully.
                </span>
            </div>
        )
    }
    {
        uploadResult?.error && (
            <div
                class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
                role="alert"
            >
                <strong class="font-bold">Upload Error!</strong>
                <span class="block sm:inline">
                    {" "}
                    {uploadResult.error.message}
                </span>
            </div>
        )
    }

    {
        successType === "deleted" && (
            <div
                class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"
                role="alert"
            >
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline"> File deleted.</span>
            </div>
        )
    }
    {
        removeResult?.error && (
            <div
                class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
                role="alert"
            >
                <strong class="font-bold">Delete Error!</strong>
                <span class="block sm:inline">
                    {" "}
                    {removeResult.error.message}
                </span>
            </div>
        )
    }

    {
        errorMsg && (
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
                <p class="text-sm text-yellow-700">{errorMsg}</p>
            </div>
        )
    }

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Upload Section -->
        <div class="md:col-span-1">
            <div
                class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 sticky top-6"
            >
                <h3 class="font-bold text-lg mb-4">Upload Files</h3>
                <form id="upload-form" class="space-y-4">
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-1"
                            >Select Files</label
                        >
                        <input
                            type="file"
                            id="file-input"
                            name="files"
                            multiple
                            required
                            class="block w-full text-sm text-slate-500
                        file:mr-4 file:py-2 file:px-4
                        file:rounded-full file:border-0
                        file:text-sm file:font-semibold
                        file:bg-indigo-50 file:text-indigo-700
                        hover:file:bg-indigo-100"
                        />
                        <p class="text-xs text-gray-500 mt-2">
                            Images will be auto-converted to WebP.
                        </p>
                    </div>
                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 flex justify-center items-center"
                    >
                        <span id="btn-text">Upload</span>
                        <svg
                            id="btn-spinner"
                            class="animate-spin ml-2 h-5 w-5 text-white hidden"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                        >
                            <circle
                                class="opacity-25"
                                cx="12"
                                cy="12"
                                r="10"
                                stroke="currentColor"
                                stroke-width="4"></circle>
                            <path
                                class="opacity-75"
                                fill="currentColor"
                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                            ></path>
                        </svg>
                    </button>
                </form>
            </div>
        </div>

        <script>
            import { actions } from "astro:actions";

            const form = document.querySelector(
                "#upload-form",
            ) as HTMLFormElement;
            const fileInput = document.querySelector(
                "#file-input",
            ) as HTMLInputElement;
            const submitBtn = document.querySelector(
                "#submit-btn",
            ) as HTMLButtonElement;
            const btnText = document.querySelector(
                "#btn-text",
            ) as HTMLSpanElement;
            const btnSpinner = document.querySelector(
                "#btn-spinner",
            ) as HTMLElement;

            // Helper to convert image File to WebP Blob
            const convertToWebP = (file: File): Promise<File> => {
                return new Promise((resolve, reject) => {
                    const img = new Image();
                    img.onload = () => {
                        const canvas = document.createElement("canvas");
                        canvas.width = img.width;
                        canvas.height = img.height;
                        const ctx = canvas.getContext("2d");
                        if (!ctx) {
                            resolve(file); // Fallback to original if canvas fails
                            return;
                        }
                        ctx.drawImage(img, 0, 0);
                        canvas.toBlob(
                            (blob) => {
                                if (blob) {
                                    const newName =
                                        file.name.replace(/\.[^/.]+$/, "") +
                                        ".webp";
                                    const newFile = new File([blob], newName, {
                                        type: "image/webp",
                                    });
                                    resolve(newFile);
                                } else {
                                    resolve(file); // Fallback
                                }
                            },
                            "image/webp",
                            0.8,
                        ); // 80% quality
                    };
                    img.onerror = () => resolve(file); // Fallback on load error
                    img.src = URL.createObjectURL(file);
                });
            };

            if (form) {
                form.addEventListener("submit", async (e) => {
                    e.preventDefault();
                    if (!fileInput.files || fileInput.files.length === 0)
                        return;

                    // UI Loading State
                    submitBtn.disabled = true;
                    btnText.textContent = "Compressing & Uploading...";
                    btnSpinner.classList.remove("hidden");

                    try {
                        const files = Array.from(fileInput.files);
                        const processedFiles: File[] = [];

                        // Process files (Client-side compression)
                        for (const file of files) {
                            if (
                                file.type.startsWith("image/") &&
                                file.type !== "image/svg+xml" &&
                                file.type !== "image/webp"
                            ) {
                                try {
                                    const webpFile = await convertToWebP(file);
                                    processedFiles.push(webpFile);
                                } catch (err) {
                                    console.error(
                                        "Compression failed for",
                                        file.name,
                                        err,
                                    );
                                    processedFiles.push(file);
                                }
                            } else {
                                processedFiles.push(file);
                            }
                        }

                        // Create FormData for upload
                        const formData = new FormData();
                        processedFiles.forEach((f) =>
                            formData.append("files", f),
                        );

                        // Send to Server
                        const { error } = await actions.media.upload(formData);

                        if (error) {
                            throw new Error(error.message);
                        }

                        // Success Redirect
                        window.location.href = "/admin/media?success=uploaded";
                    } catch (err: any) {
                        alert("Upload Failed: " + err.message);
                        submitBtn.disabled = false;
                        btnText.textContent = "Upload";
                        btnSpinner.classList.add("hidden");
                    }
                });
            }
        </script>

        <!-- File List -->
        <div class="md:col-span-2">
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
            >
                <div
                    class="px-6 py-4 border-b border-gray-100 flex justify-between items-center"
                >
                    <h3 class="font-bold text-lg text-gray-900">
                        Recent Files ({files.length})
                    </h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <tbody class="divide-y divide-gray-200">
                            {
                                files.map((file) => (
                                    <tr class="hover:bg-gray-50 group">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            <div class="flex items-center space-x-3">
                                                <svg
                                                    class="w-8 h-8 text-gray-400"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                    />
                                                </svg>
                                                <div class="flex flex-col">
                                                    <a
                                                        href={`${publicUrl}/${file.Key}`}
                                                        target="_blank"
                                                        class="text-indigo-600 hover:underline font-medium"
                                                    >
                                                        {file.Key.substring(
                                                            0,
                                                            40,
                                                        )}
                                                        {file.Key.length > 40
                                                            ? "..."
                                                            : ""}
                                                    </a>
                                                    <span class="text-xs text-gray-400">
                                                        {new Date(
                                                            file.LastModified,
                                                        ).toLocaleString()}
                                                    </span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">
                                            {(file.Size / 1024).toFixed(1)} KB
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <a
                                                    href={`${publicUrl}/${file.Key}`}
                                                    target="_blank"
                                                    class="text-gray-500 hover:text-indigo-600 p-1"
                                                    title="Download/View"
                                                >
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                        />
                                                    </svg>
                                                </a>
                                                <form
                                                    method="POST"
                                                    action={
                                                        actions.media.remove
                                                    }
                                                    onsubmit="return confirm('Are you sure you want to delete this file?');"
                                                >
                                                    <input
                                                        type="hidden"
                                                        name="key"
                                                        value={file.Key}
                                                    />
                                                    <button
                                                        type="submit"
                                                        class="text-gray-500 hover:text-red-600 p-1"
                                                        title="Delete"
                                                    >
                                                        <svg
                                                            class="w-5 h-5"
                                                            fill="none"
                                                            stroke="currentColor"
                                                            viewBox="0 0 24 24"
                                                        >
                                                            <path
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                                            />
                                                        </svg>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                ))
                            }
                            {
                                files.length === 0 && !errorMsg && (
                                    <tr>
                                        <td
                                            colspan="3"
                                            class="px-6 py-8 text-center text-gray-500"
                                        >
                                            No files found.
                                        </td>
                                    </tr>
                                )
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</AdminLayout>
