---
export const prerender = false;
import AdminLayout from '../../layouts/AdminLayout.astro';
import { actions } from 'astro:actions';
import { listFiles } from '../../utils/media';

// Helper to get environment variables. 
// In Cloudflare Pages + platformProxy, they are in Astro.locals.runtime.env
const appEnv = Astro.locals.runtime?.env || import.meta.env;

// Handle Redirects First
const uploadResult = Astro.getActionResult(actions.media.upload);
if (uploadResult && !uploadResult.error) {
    return Astro.redirect('/admin/media?success=uploaded');
}

const removeResult = Astro.getActionResult(actions.media.remove);
if (removeResult && !removeResult.error) {
    return Astro.redirect('/admin/media?success=deleted');
}

const { files, error: listError, publicUrl } = await listFiles(appEnv);
let errorMsg = listError;

// Check URL params for success messages
const successType = Astro.url.searchParams.get('success');
---

<AdminLayout title="Media Library">
   {successType === 'uploaded' && (
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <strong class="font-bold">Success!</strong>
      <span class="block sm:inline"> Files uploaded successfully.</span>
    </div>
  )}
  {uploadResult?.error && (
     <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
       <strong class="font-bold">Upload Error!</strong>
       <span class="block sm:inline"> {uploadResult.error.message}</span>
     </div>
   )}

   {successType === 'deleted' && (
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
      <strong class="font-bold">Success!</strong>
      <span class="block sm:inline"> File deleted.</span>
    </div>
  )}
  {removeResult?.error && (
     <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
       <strong class="font-bold">Delete Error!</strong>
       <span class="block sm:inline"> {removeResult.error.message}</span>
     </div>
   )}

   {errorMsg && (
       <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
           <p class="text-sm text-yellow-700">{errorMsg}</p>
       </div>
   )}

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Upload Section -->
      <div class="md:col-span-1">
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 sticky top-6">
              <h3 class="font-bold text-lg mb-4">Upload Files</h3>
              <form method="POST" action={actions.media.upload} enctype="multipart/form-data" class="space-y-4">
                  <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">Select Files</label>
                      <input type="file" name="files" multiple required class="block w-full text-sm text-slate-500
                        file:mr-4 file:py-2 file:px-4
                        file:rounded-full file:border-0
                        file:text-sm file:font-semibold
                        file:bg-indigo-50 file:text-indigo-700
                        hover:file:bg-indigo-100
                      "/>
                      <p class="text-xs text-gray-500 mt-2">You can select multiple files.</p>
                  </div>
                  <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                      Upload
                  </button>
              </form>
          </div>
      </div>

      <!-- File List -->
      <div class="md:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
                    <h3 class="font-bold text-lg text-gray-900">Recent Files ({files.length})</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <tbody class="divide-y divide-gray-200">
                            {files.map((file) => (
                                <tr class="hover:bg-gray-50 group">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <div class="flex items-center space-x-3">
                                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                            <div class="flex flex-col">
                                                <a href={`${publicUrl}/${file.Key}`} target="_blank" class="text-indigo-600 hover:underline font-medium">{file.Key.substring(0, 40)}{file.Key.length > 40 ? '...' : ''}</a>
                                                <span class="text-xs text-gray-400">{new Date(file.LastModified).toLocaleString()}</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">
                                        {(file.Size / 1024).toFixed(1)} KB
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                        <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <a href={`${publicUrl}/${file.Key}`} target="_blank" class="text-gray-500 hover:text-indigo-600 p-1" title="Download/View">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                            </a>
                                            <form method="POST" action={actions.media.remove} onsubmit="return confirm('Are you sure you want to delete this file?');">
                                                <input type="hidden" name="key" value={file.Key} />
                                                <button type="submit" class="text-gray-500 hover:text-red-600 p-1" title="Delete">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            ))}
                            {files.length === 0 && !errorMsg && (
                                <tr>
                                    <td colspan="3" class="px-6 py-8 text-center text-gray-500">No files found.</td>
                                </tr>
                            )}
                        </tbody>
                    </table>
                </div>
            </div>
      </div>
  </div>
</AdminLayout>
